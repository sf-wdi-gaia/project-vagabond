<h3>Periods!</h3>

<% @periods.each do |period| %>
  <div class="period">
    <div class="period-top">
      <img src=<%= period.image %> alt="Period Img" class="post-image-small">
    </div>
    <div class="period-body">
      <h2><%= link_to period.name, controller: "periods", action: "show", id: period %></h2>
    	<h6><%= period.start_time %> to <%= period.end_time %></h6>
      <h4><%= period.description %></h4>
    </div>

    <% period.posts.each do |post|%>
    <div class="post"> 
      <%= link_to post.title, post %>
    </div>
    <% end %>

  </div>
<% end %>
