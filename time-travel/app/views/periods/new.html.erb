Create Periods

<%= form_for @period do |f| %>

  <div>
    <%= f.text_field :name, placeholder: "Name" %>
  </div>

  <div>
    <%= f.text_area :description, placeholder: "Description" %>
  </div>
  
  <label>Period Start Date (YYYY/MM/DD)</label>
  <div>
    <%= f.text_field :start_time, placeholder: "YYYY/MM/DD" %>
  </div>
  <label>End Date (YYYY/MM/DD)</label>
  <div>
    <%= f.text_field :end_time, placeholder: "YYYY/MM/DD" %>
  </div>

  <div>
    <%= f.text_field :image, placeholder: "Image URL" %>
  </div>
 
  <%= f.submit "Create Period" %>
<% end %>
